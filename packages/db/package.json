{
  "name": "@dhamen/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./queries": "./src/queries/index.ts"
  },
  "scripts": {
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply dhamen-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply dhamen-db --remote"
  },
  "dependencies": {
    "@dhamen/shared": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.93.0"
  }
}
